{
  "manifest_version": 3,
  "name": "Bhulekh Content Reader",
  "version": "1.0",
  "description": "Reads content from Bhulekh website and provides chat interface",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://bhulekh.ori.nic.in/*",
    "http://localhost:8000/*",
    "https://9tzh9wd092.execute-api.us-east-1.amazonaws.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bhulekh Content Reader",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://bhulekh.ori.nic.in/SRoRFront_Uni.aspx*", "https://bhulekh.ori.nic.in/CRoRFront_Uni.aspx*"],
      "js": ["dist/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css", "dist/sidebar.js"],
      "matches": ["https://bhulekh.ori.nic.in/*"]
    }
  ],
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Toggle sidebar"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  }
}