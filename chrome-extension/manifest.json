{
  "manifest_version": 3,
  "name": "Bhulekh Content Reader",
  "version": "1.0",
  "description": "Reads content from Bhulekh website and provides chat interface",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://bhulekh.ori.nic.in/*",
    "http://localhost:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bhulekh Content Reader",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://bhulekh.ori.nic.in/SRoRFront_Uni.aspx*"],
      "js": ["dist/content.js"]
    }
  ]
}